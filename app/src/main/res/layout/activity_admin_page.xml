<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admin_page"
        android:id="@+id/sign_up_page_TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="24sp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:text="@string/delete_user"
        android:textSize="24sp"
        android:id="@+id/delete_user_Button"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/delete_user_Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="@string/add_category"
        android:textSize="24sp"
        android:id="@+id/add_category_Button"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/add_category_Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="@string/modify_category"
        android:textSize="24sp"
        android:id="@+id/modify_category_Button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>